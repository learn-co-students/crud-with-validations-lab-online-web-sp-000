<%= form_for(@song) do |f| %>

<% if @song.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@song.errors.count, "error") %>
      prohibited this song from being saved:
    </h2>
 
    <ul>
    <% @song.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


  <h3>Song Title: <%= f.text_field :title %></h3>
  <h3>Released?<%= f.check_box :released %></h3>
  <h3>Year released: <%= f.number_field :release_year %></h3>
  <h3>Genre: <%= f.text_field :genre %></h3>
  <h3>Artist: <%= f.text_field :artist_name %></h3>
  <h3>Submit Song<%= f.submit %></h3>
<% end %>