<%= form_for(@song) do |s| %>
    <% if @song.errors.any? %>
    <div id="error_explanation">
    <h2>There were some errors:</h2>

    <ul>
    <% @song.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
        </ul>
        </div>
        <% end %>

        <div class="field"><%= s.label :title %><br><%= s.text_field :title %>
        </div>

        <div class="field"><%= s.label :released %><br><%= s.check_box :released %>
        </div>

        <div class="field"><%= s.label :release_year %><br><%= s.number_field :release_year %>
        </div>

        <div class="field"><%= s.label :genre %><br><%= s.text_field :genre %>
        </div>

        <div class="field"><%= s.label :artist_name %><br><%= s.text_field :artist_name %>
        </div>

        <div class="actions"><%= s.submit %>
        </div>

        <% end %>