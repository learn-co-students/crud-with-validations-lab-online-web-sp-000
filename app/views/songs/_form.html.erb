<%= form_for @song do |f| %>
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h2>Errors:</h2>

      <ul>
        <% @song.to_a.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
  <div class="field">
    <%= f.label "Title: " %>
    <%= f.text_field :title %>
  </div>
  <br>
  <div class="field">
    <%= f.label "Artist Name: " %>
    <%= f.text_field :artist_name %>
  </div>
  <br>
  <div class="field">
    <%= f.label "Release Year: " %>
    <%= f.text_field :release_year %>
  </div>
  <br>
  <div class="field">
    <%= f.label "Released: " %>
    <%= f.check_box :released %>
  </div>
  <br>
  <div class="field">
    <%= f.label "Genre: " %>
    <%= f.text_field :genre %>
  </div>
  <br>
  <div class="actions">
  <%= f.submit %>
  </div>
<% end %>