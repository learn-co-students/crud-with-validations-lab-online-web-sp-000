<%= form_for @song do |f| %>
    <%= f.label :title, "Title" %><br>
    <%= f.text_field :title %><br>

    <%= f.label :title, "Released" %><br>
    <%= f.radio_button :released, :value => true %><br>

    <%= f.label :title, "Release Year" %><br>
    <%= f.text_field :release_year %><br>

    <%= f.label :title, "Artist Name" %><br>
    <%= f.text_field :artist_name %><br>

    <%= f.label :title, "Genre" %><br>
    <%= f.text_field :genre %><br>

    <%= f.submit %>
<% end %>