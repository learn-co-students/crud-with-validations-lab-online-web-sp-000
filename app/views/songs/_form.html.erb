<% if @song.errors.any? %>
<div id="error_explanation">
  <h2>
    <%= pluralize(@song.errors.count, "error") %>
    prohibited this song from being saved:
  </h2>

  <ul>
    <% @song.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= form_for @song do |f| %>
<div>
  <%= f.label 'Title' %>
  <%= f.text_field :title %>
</div>

<div>
  <%= f.label 'Released' %>
  <%= f.check_box :released %>
</div>

<div>
  <%= f.label 'Release Year' %>
  <%= f.text_field :release_year %>
</div>

<div>
  <%= f.label 'Artist Name' %>
  <%= f.text_field :artist_name %>
</div>

<div>
  <%= f.label 'Genre' %>
  <%= f.text_field :genre %>
</div>

<div>
  <%= f.submit %>
</div>
<% end %>