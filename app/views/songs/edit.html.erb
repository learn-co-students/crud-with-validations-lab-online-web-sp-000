<%= form_for @song do |f| %>
  Title <%= f.text_field :title %><br>

  <div class="field">
    <%= f.label :released %><br />
    <%= f.label :released, "Yes", :value => "true"  %>
    <%= f.radio_button :released, true %>
    <%= f.label :released, "No", :value => "false" %>
    <%= f.radio_button :released, false, :checked => true %>
  </div><br>

  Release Year <%= f.text_field :release_year %><br>
  Artist <%= f.text_field :artist_name %><br>
  Genre <%= f.text_field :genre %><br>
  <%= f.submit %>
<% end %>
