<h1>Edit <%= @song.title %></h1>

<%= form_for(@song) do |f| %>
    <label>Title : </label>
    <%= f.text_field :title %><br>
    <label>Released : </label>
    <%= f.check_box :released, checked_value: true, unchecked_value: false %><br>
    <label>Release Year : </label>
    <%= f.text_field :release_year %><br>
    <label>Artist : </label>
    <%= f.text_field :artist_name %><br>
    <label>Genre : </label>
    <%= f.text_field :genre %><br>
    <%= f.submit %>
<% end %>