<h1>Edit Song</h1>

<%= form_for(@song) do |f| %>
    <% if @song.errors.any? %>
        <div id="error_explanation">
            <h2>There were some errors:</h2>
                <ul><%= @song.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                </ul>
        </div>
    <% end %>

        <div class="field<%= ' field_with_errors' if @song.errors[:title].any? %>">
            <%= f.label "Title"%>
            <%= f.text_field :title %>
        </div>

        <div class="field<%= ' field_with_errors' if @song.errors[:artist_name].any? %>">
            <%= f.label "Artist Name" %>
            <%= f.text_field :artist_name %>
        </div>

        <div class="field<%= ' field_with_errors' if @song.errors[:genre].any? %>">
            <%= f.label "Genre" %>
            <%= f.text_field :genre %>
        </div>

        <div class="field<%= ' field_with_errors' if @song.errors[:release_year].any? %>">
            <%= f.label "Release Year" %>
            <%= f.text_field :release_year %>
        </div>

        <div class="field<%= ' field_with_errors' if @song.errors[:released].any? %>">
            <%= f.label "Released" %>
            <%= f.check_box :released %>
        </div>

        <%= submit_tag "Create" %>
    <% end %>
