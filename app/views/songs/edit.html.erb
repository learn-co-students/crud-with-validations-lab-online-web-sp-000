<h1> Edit Song </h1>
<% if @song.errors.any? %>
    <div id="error_explination">
        <h2><%=pluralize(@song.errors.count, "error")%> prohibited this Song from its inevitable creation: </h2>

        <ul>
        <% @song.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
        </ul>
    </div>
<% end %>


<%= form_for(@song) do |s|%>
    <%= s.text_field :title %>
    <%= s.check_box :released %>
    <%= s.text_field :release_year %>
    <%= s.text_field :artist_name %>
    <%= s.text_field :genre %>
    <%= s.submit %>
<% end %>