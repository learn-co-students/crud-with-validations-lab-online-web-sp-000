<h1>Edit Song</h1>

<%= form_for(@song) do |s| %>

  <label>Song title</label><br>
  <%= s.text_field :title %><br>

  <label>Released?</label>
  <%= s.check_box :released %><br>

  <label>Release year</label><br>
  <%= s.text_field :release_year %><br>

  <label>Artist name</label><br>
  <%= s.text_field :artist_name %><br>

  <label>Song genre</label><br>
  <%= s.text_field :genre %><br>

  <%= s.submit %>
<% end %>
