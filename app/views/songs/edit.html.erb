<h1>Edit Song Form</h1>
    <% if @song.errors.any? %>
        <div id="error_explanation">
            <h2>
                <%= pluralize(@song.errors.count, "error") %>
                prohibited this song from being updated:
            </h2>
 
            <ul>
                <% @song.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <%end%>
<%= form_for @song do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %>
    <%= f.label :genre %>
    <%= f.text_field :genre %>
    <%= f.label :release_year %>
    <%= f.number_field :release_year %>
    <%= f.label :released %>
    <%= f.radio_button :released, true, checked: @song.released %>True
    <%= f.radio_button :released, false, checked: !@song.released%>False
    <%= f.submit %>
<%end%>