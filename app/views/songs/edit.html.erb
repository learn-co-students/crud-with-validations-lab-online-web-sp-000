<h1>Edit <%= @song.title %></h1>

<% if @song.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@song.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>

    <ul>
    <% @song.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @song do |f| %>
  Title: <%= f.text_field :title %><br><br>
  Artist: <%= f.text_field :artist_name %><br><br>
  Genre: <%= f.text_field :genre %><br><br>
  Released: <%= f.check_box :released %><br><br>
  Year Released: <%= f.text_field :release_year %><br><br>
  <%= f.submit %>
<% end %>