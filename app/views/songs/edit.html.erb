<%= form_for @song do |f| %>
    <%= f.text_field :title %>
    <input type="checkbox" name="song[released]" id="song_released" value="true" <%= 'checked' if @song.released %>>
    <%= f.text_field :release_year %>
    <%= f.text_field :artist_name %>
    <%= f.text_field :genre %>

<%= f.submit %>
<% end %>