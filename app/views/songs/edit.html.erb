<%= @song.title %>
<% if @song.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@song.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>

    <ul>
    <% @song.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<table>
  <tbody>
    <td><%= link_to 'Edit', edit_song_path(@song) %></td>
  </tbody>
</table>

<%= form_for @song do |f| %>
  <%= f.text_field :title %>
  <%= f.text_field :artist_name %>
  <%= f.text_field :genre %>
  <%= f.check_box :released %>
  <%= f.text_field :release_year %>
  <%= f.submit %>
<% end %>
