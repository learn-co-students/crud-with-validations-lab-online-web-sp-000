<%= form_for(@song) do |f| %>
    <% if @song.errors.any? %> 
        <div id="error_explanation">
            <h2>There were some errors:</h2>
            <ul>
                <% @song.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %> 
    
    <%= f.label 'Title' %><br>
    <%= f.text_field :title %><br>

    <!-- 
    <%= f.label 'Released' %><br> 
    <%= f.radio_button :released, 'true' %><%= f.label 'True' %><br>
    <%= f.radio_button :released, 'false' %><%= f.label 'False' %><br> -->

    <%= f.label 'Released?' %><br>
    <%= f.check_box :released %><br>

    <%= f.label 'Release Year' %><br> 
    <%= f.number_field :release_year %><br> 

    <%= f.label 'Artist Name' %><br>
    <%= f.text_field :artist_name %><br>

    <%= f.label 'Genre' %><br>
    <%= f.text_field :genre %><br>

    <%= f.submit "Update Song" %> 

<% end %>
