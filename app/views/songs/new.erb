<% if @song.errors.any? %> 
    <b> There were some errors: </b> <br> 
    <% @song.errors.full_messages.each do |message| %> 
    <i> <%= message %> </i> <br> 
    <% end %> 
<% end %> 

<br> <br> 
<%= form_for @song do |f| %> 
    Title: <%= f.text_field :title %> <br> 
    Released? <%= f.text_field :released %> <br> 
    Release Year <%= f.number_field :release_year %> <br>  
    Artist Name: <%= f.text_field :artist_name %> <br> 
    Genre: <%= f.text_field :genre %> <br> 
    <%= f.submit %>
<% end %> 