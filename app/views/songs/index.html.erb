<h2>Songs</h2>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Artist Name</th>
            <th>Release Year</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>    
        <% @songs.each do |s| %>
            <tr>
                <td><%= s.title %></td>
                <td><%= s.artist_name %></td>
                <td><%= s.release_year %></td>
                <td><%= s.genre %></td>
                <td><%= link_to 'Edit', edit_song_path(s) %> | <%= link_to 'Delete', s, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
    </tbody>
</table>    
