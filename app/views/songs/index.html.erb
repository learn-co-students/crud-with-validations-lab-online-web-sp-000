<h1>All Songs</h1>

  <table border = "4" cellpadding = "5" cellspacing = "5" width = "100%">
    <thead>
      <tr>
        <th>Song</th>
        <th>Artist</th>
        <th>Genre</th>
        <th>Released</th>
        <th>Year Released</th>
      </tr>
    </thead>

    <tbody>
      <% @songs.each do |song| %>
      <tr>
        <td><%= song.title %></td>
        <td><%= song.artist_name %></td>
        <td><%= song.genre %></td>
        <td><%= song.released %></td>
        <td><%= song.release_year %></td>
        <td><%= link_to "Show", song %></td>
        <td><%= link_to "Delete", song, :method => :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

<br>
<%= button_to "Add New Song", new_song_path, :method => :get %>
