<h1>Songs:</h1>

<table style="width:100%">
  <thead>
    <tr>
      <th>Title</th>
      <th>Artist</th>
      <th>Released Year</th>
      <th>Genre</th>
    </tr>
  </thead>
  <tbody>
    <% @songs.each do |song| %>
    <tr>
      <td><%=song.title%></td>
      <td><%=song.artist_name%></td>
      <td><%=song.release_year%></td>
      <td><%=song.genre%></td>
      <!--- do not need this code at the bottom td --->
      <td>
        <%= link_to 'View', song_path(song) %> |
        <%= link_to 'Edit', edit_song_path(song) %> |
        <%= link_to 'Delete', song, method: :delete, data: { confirm: 'Delete?' } %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
