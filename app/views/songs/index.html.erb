<h1>Songs</h1>
<%= link_to 'Create Song', new_song_path %><br>

<tbody>
    <% @songs.each do |song| %>
        <tr>
            <td><%= song.title %></td>   
            <td><%= song.release_year %></td>
            <td><%= song.genre %></td>
            <td><%= song.artist_name %></td>
            <td> 
                <%=link_to "Edit", edit_song_path(song)%> |
                <%= link_to 'View', song %> | 
                <%= link_to "Delete", song, method: :delete, data: { confirm: "You Sure??"} %>
            </td>
        </tr>
    <% end %>
</tbody>

