<h1>All Songs</h1>

<table>
  <thead>
    <th>Title</th>
    <th>Artist</th>
    <th>Genre</th>
    <th>Released</th>
    <th>Release Year</th>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.title %></td>
        <td><%= song.artist_name %></td>
        <td><%= song.genre %></td>
        <td><%= song.released %></td>
        <td><%= song.release_year %></td>
        <td><%= link_to 'Delete', song, method: :delete, data: { confirm: "Are you sure?"} %></td>
      </tr>
      <% end %>
  </tbody>
</table>
