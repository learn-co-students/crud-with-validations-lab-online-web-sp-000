<h1> New Song </h1>
<% if @song.errors.any? %>
    <div id="error_explination">
        <h2><%=pluralize(@song.errors.count, "error")%> prohibited this Song from its inevitable creation: </h2>

        <ul>
        <% @song.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
        </ul>
    </div>
<% end %>


<%= form_for(@song) do |s|%>
<label>Title</label><br>
    <%= s.label "Title:" %><br>
    <%= s.text_field :title %><br>
    <%= s.label "Is it released?" %><br>
    <%= s.check_box :released %><br>
    <%= s.label "Year?" %><br>
    <%= s.text_field :release_year %><br>
    <%= s.label "Artist Name:" %><br>
    <%= s.text_field :artist_name %><br>
    <%= s.label "Genre:" %><br>
    <%= s.text_field :genre %><br>
    <%= s.submit %>
<% end %>