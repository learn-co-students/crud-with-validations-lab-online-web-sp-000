<h3>New Song</h3>

<% if @song.errors.any? %>
    <div id="error_explanation">
        <h4>There were some errors:</h4>
        <% @song.errors.full_messages.each do |msg| %>
        <ul>
            <li><%= msg %></li>
        </ul>
        <% end %>
    </div>
<% end %>

<%= form_for @song do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :released %>
    <%= f.check_box :released %>

    <%= f.label :release_year %>
    <%= f.number_field :release_year %>

    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %>

    <%= f.label :genre %>
    <%= f.text_field :genre %>

    <%= f.submit %>
<% end %>