<h2>Create a Song</h2>
<%= form_for @song do |s| %>
  <div class="field">
    <%= s.label :title %> <br>
    <%= s.text_field :title %> <br>
  </div>
  <div class="field">
    <%= s.label :released %><br>
    <%= s.check_box :released %><br>
  </div>
  <div class="field">
    <%= s.label :release_year %><br>
    <%= s.number_field :release_year %><br>
  </div>
  <div class="field">
    <%= s.label :artist_name %> <br>
    <%= s.text_field :artist_name %><br>
  </div>
  <div class="field">
    <%= s.label :genre %><br>
    <%= s.text_field :genre %><br>
  </div>

  <%= s.submit %>
<% end %>
