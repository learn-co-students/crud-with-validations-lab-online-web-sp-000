<h1>new#Songs</h1>
<% if @song.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@song.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>

    <ul>
    <% @song.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @song do |f| %>
  <p>Title: <%= f.text_field :title %></p>
  <p>Artist: <%= f.text_field :artist_name %></p>
  <p>Genre: <%= f.text_field :genre %></p>
  <p>Released: <%= f.check_box :released %></p>
  <p>Release Year: <%= f.text_field :release_year %></p>
  <%= f.submit %>
<% end %>
