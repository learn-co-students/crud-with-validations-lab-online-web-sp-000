<h1>New Song Form</h1>

<%if @song.errors.any?%>
<div id="errors_description">
    <ul>
        <%@song.errors.full_messages.each  do  |msg|%>
            <li><%=msg%></li>
        <%end%>
    </ul>
</div>
<%end%>

<%=form_for @song do |s|%>
    <%=s.label :title%><br>
    <%=s.text_field :title%><br>
    <%=s.label :released%><br>
    <%=s.check_box  :released%><br>
    <%=s.label :release_year%><br>
    <%=s.text_field :release_year%><br>
    <%=s.label :artist_name%><br>
    <%=s.text_field :artist_name%><br>
    <%=s.label :genre%><br>
    <%=s.text_field :genre%><br>
    <%=s.submit%>
<%end%>