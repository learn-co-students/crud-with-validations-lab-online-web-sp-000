<%= form_for @song do |f| %>
  <%= f.label 'Song Title' %><br>
  <%= f.text_field :title, value: @song.title %><br>

  <%= f.label 'Released?' %><br>
  <%= f.check_box :released, value: @song.released %><br>

  <%= f.label 'Release Year' %><br>
  <%= f.text_field :release_year, value: @song.release_year %><br>

  <%= f.label 'Artist Name' %><br>
  <%= f.text_field :artist_name, value: @song.artist_name %><br>

  <%= f.label 'Genre' %><br>
  <%= f.text_field :genre, value: @song.genre %><br>

  <%= f.submit "Submit Song" %>
<% end %>
